<%- include('../partials/header.ejs') %>

<%- include('../partials/main_nav.ejs') %>

<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField" placeholder="Enter the name"
                    name="name" value="<%= contact.name%>" required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="phoneTextField" placeholder="Enter the phone"
                    name="phone" value="<%= contact.phone%>" required>
                </div>

                <div class="form-group">
                    <label for="emailextField">Email</label>
                    <input type="email" class="form-control"
                    id="emailextField" placeholder="Enter the email"
                    name="email" value="<%= contact.email%>" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit
                </button>
                <a href="/businesscontact" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
                

                
            </form>
        </div>
    </div>
</div>



<%- include('../partials/bottom_nav.ejs') %>

